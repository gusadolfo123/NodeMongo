<div class="row mb-4">
    {{#each notes}}        
        <div class="col-md-3 mt-2">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-top">     
                        {{title}}
                        <a href="/notes/edit/{{_id}}"><i class="far fa-edit"></i></a>
                    </h4>
                    <p>{{description}}</p>
                    <button class="btn btn-danger btn-block">Delete</button>
                </div>
            </div>
        </div>
    {{else}}        
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead">There are not notes yet</p>
                <a href="/notes/add" class="btn btn-success btn-block">Create One</a>
            </div>
        </div>
    {{/each}}

</div>


