<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">

                <input type="hidden" name="_method" value="PUT">

                <div class="form-group">
                    <input type="text" name="title" id="title" 
                            class="form-control" placeholder="Title" value="{{note.title}}" autofocus>
                </div>
                <div class="form-group">
                    <textarea type="text" name="description" id="description" 
                        class="form-control" placeholder="Description">{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-sm col-12 btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>